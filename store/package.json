{
  "name": "react-atomic-store",
  "type": "module",
  "version": "0.0.9",
  "description": "Simple React store based on useSyncExternalStore",
  "author": "tingyuan",
  "license": "MIT",
  "homepage": "https://github.com/lovetingyuan/react-atomic-store#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lovetingyuan/react-atomic-store.git"
  },
  "bugs": {
    "url": "https://github.com/lovetingyuan/react-atomic-store/issues"
  },
  "keywords": [
    "react",
    "atomic",
    "atom",
    "state",
    "store"
  ],
  "sideEffects": false,
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "test": "tsx tests",
    "build": "tsup src/index.ts --dts --format esm",
    "dev": "cd example && npx vite",
    "prepublishOnly": "npm run lint && npm run build",
    "pub": "np --no-tests",
    "lint": "npx -y oxlint@latest src tests"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "global-jsdom": "26.0.0",
    "np": "^10.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3"
  }
}
